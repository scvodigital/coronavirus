{
	"authNotRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.co_token",
			"cookieName": "co_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "coronavirus",
			"notAuthenticatedRoute": ""
		}
	},
	"authRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.co_token",
			"cookieName": "co_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "coronavirus",
			"notAuthenticatedRoute": "sign_in"
		}
	},
	"currentSite": {
		"name": "currentSite",
		"taskModule": "render",
		"renderer": "jsone",
		"config": {
			"template": {
				"_let": {
					"hostname": {
						"_eval": "jsone.stringReplace(request.url.hostname, '.', '_')"
					}
				},
				"in": {
					"_let": {
						"path": "${context.metaData['domain-map'][hostname]}"
					},
					"in": {
						"_eval": "context.metaData['site-configurations'][path]"
					}
				}
			},
			"output": "data"
		}
	},
	"tfn_related": {
		"name": "tfn_related_posts",
		"taskModule": "elasticsearch",
		"config": {
			"connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
			"elasticsearchConfig": {
				"apiVersion": "5.6"
			},
			"queryTemplates": {
				"index": "{$../data/elasticsearch-index.txt}",
				"type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
				"template": ">context.metaData.handlebars.queries.posts_tfn-related-coronavirus"
			}
		},
		"renderer": "handlebars"
	}
}