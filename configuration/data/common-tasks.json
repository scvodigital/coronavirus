{
	"authNotRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.co_token",
			"cookieName": "co_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "coronavirus",
			"notAuthenticatedRoute": ""
		}
	},
	"authRequired": {
		"name": "auth",
		"taskModule": "firebaseAuth",
		"config": {
			"tokenPath": "request.cookies.co_token",
			"cookieName": "co_cookie",
			"cookieOptions": {
				"maxAge": 1209600000,
				"secure": true,
				"path": "/"
			},
			"appName": "coronavirus",
			"notAuthenticatedRoute": "sign_in"
		}
	},
	"tfn_latest": {
		"name": "tfn_latest_posts",
		"taskModule": "elasticsearch",
		"config": {
			"connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
			"elasticsearchConfig": {
				"apiVersion": "5.6"
			},
			"queryTemplates": {
				"index": "{$../data/elasticsearch-index.txt}",
				"type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
				"template": ">context.metaData.handlebars.queries.posts_tfn-latest-coronavirus"
			}
		},
		"renderer": "handlebars"
	}
}