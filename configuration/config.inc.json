{
  "domains": [
    "covid-19.local",
    "coronavirus.local",
    "covid-19.scvo.scot",
    "covid-19.scvo.org",
    "covid-19.scvo.org.uk",
    "coronavirus.scvo.scot",
    "coronavirus.scvo.org",
    "coronavirus.scvo.org.uk"
  ],
  "routes": [
    "{:./routes/*.json}"
  ],
  "metaData": {
    "assetsVersion": "{:../package.json@version}",
    "assetsBase": "https://storage.googleapis.com/scvo-assets/test/coronavirus/",
    "title": "Coronavirus Community Assistance Directory",
    "tagline": "Find and offer help in your community",
    "contacts": {
      "admin": "calum.macuisdean@scvo.org.uk",
      "noreply": "no-reply@scvo.org.uk",
      "technical": "webhelpdesk@scvo.org.uk"
    },
    "url": "https://covid-19.scvo.org",
    "searchKnobs": "{:./data/search-knobs.json}",
    "elasticsearchUrl": "{$./data/elasticsearch-url.txt}",
    "menus": "{:./data/menu-layout.json}",
    "handlebars": {
      "partials": {
        "{$./partials/**/*.*}": "includeRelativePath=false&regexExpression=(-)&regexOptions=gi&regexReplace=_"
      },
      "templates": {
        "{$./templates/**/*.*}": ""
      },
      "layouts": {
        "{$./layouts/**/*.*}": ""
      },
      "queries": {
        "{$./queries/**/*.*}": ""
      },
      "frontend": {
        "tasks": {
          "{$./frontend/tasks/**/*.*}": ""
        },
        "configs": {
          "{$./frontend/configs/**/*.*}": ""
        },
        "partials": {
          "{$./frontend/partials/**/*.*}": "includeRelativePath=false&regexExpression=(-)&regexOptions=gi&regexReplace=_"
        }
      }
    },
    "commonTasks": "{:./data/common-tasks.json}"
  }
}