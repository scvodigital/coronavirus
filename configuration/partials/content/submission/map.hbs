<div class="map-content">
  <h4 class="map-info post-title">
    <a href="{{> content_submission_link}}{{> query_search}}">{{title}}</a>
  </h4>
  {{#if organisation_name ~}}
  <div class="v-margin">
    {{organisation_name}}
  </div>
  {{/if ~}}
  {{#if map_postcode ~}}
  <div class="v-margin">
    Postcode: {{map_postcode}}
  </div>
  {{/if ~}}
  <div class="">
    {{#ifAny help_offered help_needed ~}}
    <div style="max-height: 2.8rem;" class="post-info-description faded-overflow">
      {{truncate (default help_offered help_needed) 200}}
    </div>
    {{/ifAny ~}}
  </div>
  <div class="">
    <a href="{{> content_submission_link}}{{> query_search}}" class="no-underline">Find out more</a>
  </div>
</div>