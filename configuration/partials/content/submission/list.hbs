  {{> content_submission_key_info type="list"}}
  {{#unless (compare view 'widget') ~}}
  <hr class="mdc-list-divider" />
  {{/unless ~}}
  {{> content_submission_description description=description}}
  {{#unless (compare view 'widget') ~}}
  {{> content_submission_actions slug=slug Id=Id}}
  {{/unless ~}}
</div>