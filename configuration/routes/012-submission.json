{
  "name": "submission",
  "debug": true,
  "pattern": "/help/submission/:id(/:junk)",
  "tasks": [
    "context.metaData.commonTasks.tfn_latest",
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "coronavirus-submission",
          "template": ">context.metaData.handlebars.queries.submissions_submission"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "submissionSupplimentary",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "types",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "coronavirus-submission",
            "template": ">context.metaData.handlebars.queries.submissions_types"
          },
          {
            "name": "related",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "coronavirus-submission",
            "template": ">context.metaData.handlebars.queries.submissions_related"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "posts",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "tfn_latest",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "tfn-legacy-post-news,tfn-legacy-post-blog,tfn-legacy-feature",
            "template": ">context.metaData.handlebars.queries.posts_tfn-latest"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.submissions_submission"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}