{
  "name": "share_delete",
  "pattern": "/share/delete/:id/:secret_key",
  "debug": true,
  "errorRoute": "five_hundred",
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "firebaseRtbGet",
      "renderer": "handlebars",
      "config": {
        "appName": "coronavirus",
        "pathTemplate": "/submissions/{{default @root.request.params.id 'null'}}/",
        "defaultData": {}
      }
    },
    {
      "name": "reroute",
      "taskModule": "reroute",
      "config": {
        "if": [
          { "!=": [{"var": "data.primaryResponse.secret_key"}, {"var": "request.params.secret_key"}] },
          "_default",
          false
        ]
      }
    },
    {
      "name": "save_data",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "dataTemplate": ">context.metaData.handlebars.templates.database_firebase-delete",
        "setOrUpdate": "update",
        "appName": "coronavirus",
        "pathTemplate": "/submissions/{{@root.request.params.id}}/"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.submissions_share-deleted"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}