{
  "name": "share_delete",
  "pattern": "/share/delete/:id/:secret_key",
  "debug": true,
  "errorRoute": "five_hundred",
  "tasks": [
    {
      "name": "save_data",
      "taskModule": "firebaseRtbSet",
      "renderer": "handlebars",
      "config": {
        "dataTemplate": ">context.metaData.handlebars.templates.database_firebase",
        "setOrUpdate": "update",
        "appName": "coronavirus",
        "pathTemplate": "/submissions/{{@root.request.body.id}}/"
      }
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.submissions_share-thanks"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}