{
  "name": "help_people",
  "pattern": "/help(/:type)",
  "debug": true,
  "errorRoute": "five_hundred",
  "tasks": [
    "context.metaData.commonTasks.currentSite",
    "context.metaData.commonTasks.authNotRequired",
    "context.metaData.commonTasks.tfn_related",
    {
      "name": "location_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "la_results",
            "index": "geo_lookup",
            "type": "es_district",
            "template": ">context.metaData.handlebars.queries.submissions_local-authority-areas"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "search_data",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "detailed_results",
            "index": "{$../data/elasticsearch-index.txt}",
            "type": "coronavirus-submission,coronavirus-group",
            "template": ">context.metaData.handlebars.queries.submissions_search-list"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.pages_head-tags",
              "body": ">context.metaData.handlebars.templates.submissions_search"
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}