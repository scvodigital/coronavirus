    <script>
    $('#where-local').click(function() {
      $('#where-local-options').removeClass('hidden');
      $('#where-areas-options').addClass('hidden');
    });
    $('#where-areas').click(function() {
      $('#where-local-options').addClass('hidden');
      $('#where-areas-options').removeClass('hidden');
    });
    $('#where-national').click(function() {
      $('#where-local-options').addClass('hidden');
      $('#where-areas-options').addClass('hidden');
    });
    </script>

    {{#ifAny (compare @root.request.params.type "people") (compare @root.request.params.type "organisations") ~}}
    <div class="form-group">
      <label class="form-label" for="title">Please enter a brief summary of what you can offer</label>
      <input class="form-input" type="text" name="title" id="title" maxlength="70" placeholder="e.g. Transportation services for carers">
    </div>

    <div class="form-group">
      <label class="form-label" for="help-offered">What help can you offer? Please be very specific and realistic, rather than a description of your general services.</label>
      <textarea class="form-input" name="help-offered" id="help-offered" placeholder="" rows="3"></textarea>
    </div>

    <div class="form-group">
      <label class="form-label" for="access-support">How can {{@root.request.params.type}} access your support?</label>
      <textarea class="form-input" name="access-support" id="access-support" placeholder="" rows="3"></textarea>
    </div>

    <div class="form-group">
      <label class="form-label" for="organisation_name">Your organisation name</label>
      <input class="form-input" type="text" name="organisation_name" id="organisation_name" maxlength="70" placeholder="e.g. SCVO">
    </div>
    {{/ifAny ~}}

    {{#switch @root.request.params.type ~}}
    {{#case "people" ~}}
    <p>
      <strong>Where can people find out more? Please complete the contact details with specific links / contact details where people can access your support.</strong>
    </p>
    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="website">Website</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="website" id="website" placeholder="e.g. https://example.com">
        </div>
      </div>
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="telephone">Telephone</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="telephone" id="telephone" placeholder="e.g. 0131 474 8000">
        </div>
      </div>
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="email">Email</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="email" id="email" placeholder="e.g. info@example.com">
        </div>
      </div>
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="facebook">Facebook</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="facebook" id="facebook" placeholder="e.g. https://facebook.com/page">
        </div>
      </div>
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="twitter">Twitter</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="twitter" id="twitter" placeholder="e.g. https://twitter.com/account">
        </div>
      </div>
    </div>
    {{/case ~}}
    {{#case "organisations" ~}}
    <p>
      <strong>How should organisations / professionals get in touch? Please complete the contact details with specific contact details to access your support.</strong>
    </p>
    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="name">Contact name</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="name" id="name" placeholder="e.g. Your Name">
        </div>
      </div>
      <div class="form-group">
        <div class="col-3 col-sm-12">
          <label class="form-label" for="email">Email address</label>
        </div>
        <div class="col-9 col-sm-12">
          <input class="form-input" type="text" name="email" id="email" placeholder="e.g. info@example.com">
        </div>
      </div>
